{
    "name": "@12peanuts/design-system-react-native",
    "version": "0.0.9",
    "description": "test",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "!**/__tests__"
    ],
    "scripts": {
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepack": "bob build",
        "release": "release-it",
        "example": "yarn --cwd example",
        "bootstrap": "yarn example && yarn install && yarn example pods",
        "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build",
        "publish": "yarn prepack && npm publish"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/12peanuts/design-system-react-native",
    "author": "hx2ryu <hx2ryu@gmail.com> (https://github.com/hx2ryu)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/12peanuts/design-system-react-native/issues"
    },
    "homepage": "https://github.com/12peanuts/design-system-react-native#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "devDependencies": {
        "@12peanuts/eslint-config-react": "^1.0.0",
        "@commitlint/config-conventional": "^17.0.2",
        "@emotion/native": "^11.10.6",
        "@emotion/react": "^11.10.6",
        "@evilmartians/lefthook": "^1.2.2",
        "@react-native-community/eslint-config": "^3.0.2",
        "@release-it/conventional-changelog": "^5.0.0",
        "@types/jest": "^28.1.2",
        "@types/react": "~17.0.21",
        "@types/react-native": "0.70.0",
        "commitlint": "^17.0.2",
        "del-cli": "^5.0.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^28.1.1",
        "pod-install": "^0.1.0",
        "prettier": "^2.0.5",
        "react": "18.2.0",
        "react-native": "0.71.5",
        "react-native-builder-bob": "^0.20.4",
        "release-it": "^15.0.0",
        "typescript": "^4.5.2"
    },
    "resolutions": {
        "@types/react": "17.0.21"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "engines": {
        "node": ">= 16.0.0"
    },
    "packageManager": "^yarn@1.22.15",
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native-community",
            "@12peanuts/eslint-config-react",
            "prettier"
        ],
        "rules": {
            "import/no-extraneous-dependencies": 0,
            "react/jsx-filename-extension": 0,
            "import/no-unresolved": 0,
            "operator-linebreak": 0,
            "no-nested-ternary": 0
        }
    },
    "eslintIgnore": [
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": true
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
